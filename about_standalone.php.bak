<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Benguet State University - Bokod Campus</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* ============= MODERN ABOUT PAGE STYLES ============= */
        :root {
          --primary: #2c3e50;
          --secondary: #34495e;
          --accent: #27ae60;
          --accent-dark: #219653;
          --accent-light: #2ecc71;
          --warning: #e67e22;
          --danger: #e74c3c;
          --info: #3498db;
          --muted: #6c757d;
          --light: #f8f9fa;
          --dark: #343a40;
          --radius: 12px;
          --shadow: 0 4px 12px rgba(0,0,0,0.08);
          --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
          --transition: all 0.3s ease;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fa;
            color: #333;
            padding-top: 20px;
            padding-bottom: 40px;
        }

        .about-hero {
          background-repeat: no-repeat;
          background-size: cover;
          background-position: center;
          position: relative;
          border-radius: var(--radius);
          overflow: hidden;
          box-shadow: var(--shadow-lg);
          margin-bottom: 30px;
          min-height: 500px;
          display: flex;
          align-items: center;
        }

        /* Enhanced gradient overlay for better text readability */
        .about-hero::before {
          content: "";
          position: absolute;
          inset: 0;
          background: linear-gradient(135deg, rgba(10, 30, 10, 0.85) 0%, rgba(10, 30, 10, 0.6) 100%);
          pointer-events: none;
        }

        /* Additional subtle pattern overlay */
        .about-hero::after {
          content: "";
          position: absolute;
          inset: 0;
          background: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.03"><circle cx="30" cy="30" r="1"/></g></svg>');
          pointer-events: none;
        }

        /* Panel content sits above overlay */
        .about-inner {
          position: relative;
          z-index: 2;
          padding: 40px 30px;
          width: 100%;
        }

        /* Two-column layout */
        .about-col-left {
          text-align: center;
          padding: 20px;
          display: flex;
          align-items: center;
          justify-content: center;
          flex-direction: column;
        }

        .about-seal {
          max-width: 240px;
          width: 100%;
          height: auto;
          display: block;
          margin: 0 auto;
          border-radius: 50%;
          box-shadow: 0 12px 30px rgba(0,0,0,0.2);
          background: rgba(255,255,255,0.95);
          padding: 15px;
          border: 4px solid var(--accent-light);
          transition: var(--transition);
        }

        .about-seal:hover {
          transform: scale(1.05);
          box-shadow: 0 16px 40px rgba(0,0,0,0.3);
        }

        /* Text column */
        .about-col-right { 
          padding: 20px 25px; 
          color: #fafafa; 
        }

        .about-header { 
          color: #fff; 
          margin-bottom: 20px; 
          text-align: center;
        }

        .about-header h2 { 
          margin: 0 0 8px 0; 
          font-weight: 800; 
          font-size: 2.2rem;
          text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .about-sub { 
          color: rgba(255,255,255,0.9); 
          font-size: 1.1rem;
          font-weight: 500;
        }

        /* Enhanced content box with modern design */
        .about-box {
          background: rgba(255, 255, 255, 0.75);
          color: var(--dark);
          border-radius: var(--radius);
          padding: 30px;
          box-shadow: var(--shadow-lg);
          backdrop-filter: blur(10px);
          border: 1px solid rgba(255,255,255,0.2);
        }

        /* Section styling */
        .about-section {
          margin-bottom: 25px;
          padding-bottom: 20px;
          border-bottom: 1px solid rgba(0,0,0,0.08);
        }

        .about-section:last-of-type {
          margin-bottom: 0;
          padding-bottom: 0;
          border-bottom: none;
        }

        .about-section h3 {
          margin: 0 0 12px 0;
          font-size: 1.3rem;
          font-weight: 700;
          color: var(--primary);
          display: flex;
          align-items: center;
          gap: 10px;
        }

        .about-section h3 .fa {
          color: var(--accent);
          width: 24px;
          text-align: center;
        }

        .about-text {
          line-height: 1.7;
          color: var(--dark);
          margin: 0;
          font-size: 15px;
        }

        /* Enhanced goals list */
        .goal-list {
          margin: 0;
          padding: 0;
          list-style: none;
        }

        .goal-list li {
          padding: 8px 0;
          display: flex;
          align-items: flex-start;
          gap: 12px;
          line-height: 1.6;
          border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .goal-list li:last-child {
          border-bottom: none;
        }

        .goal-list li::before {
          content: "â€¢";
          color: var(--accent);
          font-weight: bold;
          font-size: 18px;
          flex-shrink: 0;
          margin-top: 2px;
        }

        .goal-list strong {
          color: var(--primary);
        }

        /* Mission acronym highlighting */
        .mission-acronym {
          background: rgba(39, 174, 96, 0.1);
          padding: 2px 6px;
          border-radius: 4px;
          font-weight: 700;
          color: var(--accent-dark);
        }

        /* Animation for content */
        .about-box {
          animation: fadeInUp 0.8s ease-out;
        }

        @keyframes fadeInUp {
          from {
            opacity: 0;
            transform: translateY(30px);
          }
          to {
            opacity: 1;
            transform: translateY(0);
          }
        }

        /* Department Logos Styles */
        .dept-logos-container {
            margin-top: 40px;
        }
        
        .dept-section-header {
            text-align: center;
            margin-bottom: 30px;
            color: var(--primary);
        }
        
        .dept-section-header h3 {
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 10px;
        }
        
        .dept-section-header p {
            color: var(--muted);
            font-size: 1.1rem;
            max-width: 600px;
            margin: 0 auto;
        }
        
        .dept-logo-card {
            background: white;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 25px 15px;
            text-align: center;
            height: 100%;
            transition: var(--transition);
            border-top: 4px solid var(--accent);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        
        .dept-logo-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }
        
        .dept-logo {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            transition: var(--transition);
            background: white;
            padding: 10px;
        }
        
        .dept-logo img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }
        
        .dept-logo-card:hover .dept-logo {
            transform: scale(1.1);
        }
        
        .dept-name {
            font-weight: 700;
            font-size: 1.1rem;
            color: var(--primary);
            margin-bottom: 8px;
        }
        
        .dept-desc {
            color: var(--muted);
            font-size: 0.9rem;
            line-height: 1.5;
        }

        /* Responsive adjustments */
        @media (max-width: 991px) {
          .about-hero {
            min-height: 400px;
          }
          
          .about-inner {
            padding: 30px 20px;
          }
          
          .about-header h2 {
            font-size: 1.8rem;
          }
          
          .about-seal {
            max-width: 180px;
          }
          
          .about-box {
            padding: 25px;
          }
        }

        @media (max-width: 767px) {
          .about-hero {
            min-height: auto;
          }
          
          .about-inner {
            padding: 25px 15px;
          }
          
          .about-col-left {
            padding: 15px 10px;
          }
          
          .about-col-right {
            padding: 15px 10px;
          }
          
          .about-header h2 {
            font-size: 1.6rem;
          }
          
          .about-seal {
            max-width: 150px;
            margin-bottom: 15px;
          }
          
          .about-box {
            padding: 20px;
          }
          
          .about-section h3 {
            font-size: 1.2rem;
          }
          
          .dept-logo {
            width: 100px;
            height: 100px;
          }
        }

        @media (max-width: 576px) {
          .about-inner {
            padding: 20px 10px;
          }
          
          .about-header h2 {
            font-size: 1.4rem;
          }
          
          .about-box {
            padding: 15px;
          }
          
          .goal-list li {
            flex-direction: column;
            gap: 5px;
          }
          
          .dept-logo {
            width: 90px;
            height: 90px;
          }
        }

        /* Print styles */
        @media print {
          .about-hero {
            background: #fff !important;
            box-shadow: none !important;
            min-height: auto !important;
          }
          
          .about-hero::before,
          .about-hero::after {
            display: none !important;
          }
          
          .about-box {
            background: #fff !important;
            box-shadow: none !important;
            border: 1px solid #ddd !important;
          }
          
          .about-seal {
            border: 2px solid #000 !important;
            background: #fff !important;
          }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Hero panel with background image -->
                <div class="about-hero" style="background-image: url('img/bsu_bg.webp');">
                    <div class="about-inner container">
                        <div class="row align-items-center">
                            <!-- Left: University Seal -->
                            <div class="col-md-4 about-col-left">
                                <img src="img/school_seal.png" 
                                     alt="Benguet State University - Bokod Campus Seal" 
                                     class="about-seal" />
                            </div>

                            <!-- Right: Mission & Vision Content -->
                            <div class="col-md-8 about-col-right">
                                <div class="about-header">
                                    <h2>Mission & Vision</h2>
                                    <div class="about-sub">Benguet State University - Bokod Campus</div>
                                </div>

                                <div class="about-box">
                                    <!-- Vision Section -->
                                    <div class="about-section">
                                        <h3>
                                            <i class="fa fa-eye"></i> Vision
                                        </h3>
                                        <p class="about-text">
                                            BSU as an International Smart University engendering graduates to walk the intergenerational highways.
                                        </p>
                                    </div>

                                    <!-- Mission Section -->
                                    <div class="about-section">
                                        <h3>
                                            <i class="fa fa-rocket"></i> Mission
                                        </h3>
                                        <p class="about-text">
                                            BSU CARES to: 
                                            <span class="mission-acronym">C</span>hallenge innovation, 
                                            <span class="mission-acronym">A</span>dvance technology and facility, 
                                            <span class="mission-acronym">R</span>evitalize administration, 
                                            <span class="mission-acronym">E</span>ngender partnership, and 
                                            <span class="mission-acronym">S</span>erve intergenerational role.
                                        </p>
                                    </div>

                                    <!-- Campus Goals Section -->
                                    <div class="about-section">
                                        <h3>
                                            <i class="fa fa-graduation-cap"></i> Campus Goals
                                        </h3>
                                        <p class="about-text">
                                            Advancing an inclusive educational environment that produces globally competitive and research-oriented professional leaders who walk the intergenerational highways and are imbued with indigenous virtues and strategic foresight.
                                        </p>
                                    </div>

                                    <!-- Development Goals Section -->
                                    <div class="about-section">
                                        <h3>
                                            <i class="fa fa-bullseye"></i> Development Goals
                                        </h3>
                                        <ul class="goal-list">
                                            <li>
                                                <strong>Goal I:</strong> Challenge Innovation in the four-fold functions of the University.
                                            </li>
                                            <li>
                                                <strong>Goal II:</strong> Advance Technology and Facility by shaping the University to become responsive to modern needs.
                                            </li>
                                            <li>
                                                <strong>Goal III:</strong> Revitalize Administration by harmonizing performance monitoring, information, and reporting systems.
                                            </li>
                                            <li>
                                                <strong>Goal IV:</strong> Engender Partnership by proactively strengthening linkages.
                                            </li>
                                            <li>
                                                <strong>Goal V:</strong> Serve Intergenerational Role by revitalizing the Spiritual, Physical, Economical, Cultural, Intellectual, and Social (S.P.E.C.I.E.S) state.
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Department Logos Section -->
        <div class="dept-logos-container">
            <div class="dept-section-header">
                <h3>Our Academic Departments</h3>
                <p>Discover the diverse range of academic programs and departments at BSU Bokod Campus</p>
            </div>
            
            <div class="row justify-content-center">
                <!-- Department 1 -->
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="dept-logo-card">
                        <div class="dept-logo">
                            <img src="img/ced.jpg" alt="College of Education Logo">
                        </div>
                        <div class="dept-name">College of Education</div>
                        <div class="dept-desc">Teacher education and educational sciences programs</div>
                    </div>
                </div>
                
                <!-- Department 2 -->
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="dept-logo-card">
                        <div class="dept-logo">
                            <img src="img/cat.jpg" alt="College of Engineering Logo">
                        </div>
                        <div class="dept-name">College of Applied Technololy</div>
                        <div class="dept-desc">Engineering and technology programs</div>
                    </div>
                </div>
                
                <!-- Department 3 -->
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="dept-logo-card">
                        <div class="dept-logo">
                            <img src="img/cbmpa.png" alt="College of Business Logo">
                        </div>
                        <div class="dept-name">College of Business Management and Public Administration</div>
                        <div class="dept-desc">Business administration and management programs</div>
                    </div>
                </div>
                
                <!-- Department 4 -->
               <div class="col-md-3 col-sm-6 mb-4">
    <div class="dept-logo-card">
        <div class="dept-logo" style="width: 120px; height: 120px; border-radius: 50%; overflow: hidden; margin: 0 auto 15px; position: relative;">
            <img src="img/ccje.png" alt="College of Agriculture Logo" style="width: 105%; height: 105%; object-fit: cover; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        </div>
        <div class="dept-name">College of Criminal Justice Education</div>
        <div class="dept-desc">Agricultural sciences and technology programs</div>
    </div>
</div>
            </div>
        </div>
    </div>

    <!-- Enhanced JavaScript for interactive elements -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add subtle animation to mission acronyms on hover
            const acronyms = document.querySelectorAll('.mission-acronym');
            
            acronyms.forEach(acronym => {
                acronym.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.1)';
                    this.style.transition = 'transform 0.2s ease';
                });
                
                acronym.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            });
            
            // Add intersection observer for scroll animations
            const aboutBox = document.querySelector('.about-box');
            
            if (aboutBox && 'IntersectionObserver' in window) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.style.animationPlayState = 'running';
                        }
                    });
                }, { threshold: 0.1 });
                
                observer.observe(aboutBox);
            }
            
            // Add department card animations
            const deptCards = document.querySelectorAll('.dept-logo-card');
            
            if (deptCards && 'IntersectionObserver' in window) {
                const cardObserver = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }
                    });
                }, { threshold: 0.1 });
                
                deptCards.forEach(card => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    cardObserver.observe(card);
                });
            }
            
            // Add print-friendly behavior
            const style = document.createElement('style');
            style.textContent = `
                @media print {
                    .about-hero {
                        page-break-inside: avoid;
                    }
                    .about-box {
                        page-break-inside: avoid;
                    }
                    .dept-logos-container {
                        page-break-before: always;
                    }
                }
            `;
            document.head.appendChild(style);
        });
    </script>
</body>
</html>